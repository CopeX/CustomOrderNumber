<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <ordernumber>
            <order>
                <enable>1</enable>
                <format>ORD-{mm}{yy}-{counter}-{storeId}</format>
                <start>1</start>
                <increment>1</increment>
                <padding>5</padding>
                <reset>0</reset>
            </order>
            <invoice>
                <enable>1</enable>
                <same_order>1</same_order>
                <replace>ORD</replace>
                <replace_with>INV</replace_with>
            </invoice>
            <shipment>
                <enable>1</enable>
                <same_order>1</same_order>
                <replace>ORD</replace>
                <replace_with>SHI</replace_with>
            </shipment>
            <creditmemo>
                <enable>1</enable>
                <same_order>1</same_order>
                <replace>ORD</replace>
                <replace_with>CRE</replace_with>
            </creditmemo>
        </ordernumber>
    </default>
</config>
